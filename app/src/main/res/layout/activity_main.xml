<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size"
        android:hint="@string/result"
        android:textSize="@dimen/min_Size"
        app:layout_constraintBottom_toTopOf="@id/x" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickNumber"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_five"
        app:layout_constraintRight_toLeftOf="@id/btn_five"
        app:layout_constraintTop_toTopOf="@id/btn_five"
        android:onClick="onClickNumber"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/six"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_five"
        app:layout_constraintLeft_toRightOf="@id/btn_five"
        app:layout_constraintTop_toTopOf="@+id/btn_five"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eight"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/btn_five"
        app:layout_constraintLeft_toLeftOf="@id/btn_five"
        app:layout_constraintRight_toRightOf="@id/btn_five"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seven"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_eight"
        app:layout_constraintRight_toLeftOf="@id/btn_eight"
        app:layout_constraintTop_toTopOf="@id/btn_eight"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nine"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_eight"
        app:layout_constraintLeft_toRightOf="@id/btn_eight"
        app:layout_constraintTop_toTopOf="@+id/btn_eight"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/five"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClickNumber"
        />
    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_five"
        app:layout_constraintRight_toLeftOf="@id/btn_five"
        app:layout_constraintTop_toTopOf="@id/btn_five"
      android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/six"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_five"
        app:layout_constraintLeft_toRightOf="@id/btn_five"
        app:layout_constraintTop_toTopOf="@+id/btn_five"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_two"
        app:layout_constraintRight_toLeftOf="@id/btn_two"
        app:layout_constraintTop_toTopOf="@id/btn_two"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_two"
        app:layout_constraintLeft_toRightOf="@id/btn_two"
        app:layout_constraintTop_toTopOf="@+id/btn_two"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/btn_five"
        app:layout_constraintRight_toRightOf="@+id/btn_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_five"
        android:onClick="onClickNumber"/>
    <Button
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@id/btn_two"
        app:layout_constraintRight_toRightOf="@+id/btn_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_two"
        android:onClick="onClickNumber"/>

    <Button
        android:id="@+id/btn_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_zero"
        app:layout_constraintRight_toLeftOf="@id/btn_zero"
        app:layout_constraintTop_toTopOf="@id/btn_zero"
        />


    <Button
        android:id="@+id/btn_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_zero"
        app:layout_constraintLeft_toRightOf="@id/btn_zero"
        app:layout_constraintTop_toTopOf="@+id/btn_zero"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_nine"
        app:layout_constraintLeft_toRightOf="@id/btn_nine"
        app:layout_constraintTop_toTopOf="@+id/btn_nine"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_six"
        app:layout_constraintLeft_toRightOf="@id/btn_six"
        app:layout_constraintTop_toTopOf="@+id/btn_six"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_three"
        app:layout_constraintLeft_toRightOf="@id/btn_three"
        app:layout_constraintTop_toTopOf="@+id/btn_three"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
        app:layout_constraintLeft_toRightOf="@id/btn_dot"
        app:layout_constraintTop_toTopOf="@+id/btn_dot"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_seven"
        app:layout_constraintLeft_toLeftOf="@+id/btn_seven"
        app:layout_constraintRight_toRightOf="@+id/btn_seven"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_eight"
        app:layout_constraintLeft_toLeftOf="@+id/btn_eight"
        app:layout_constraintRight_toRightOf="@+id/btn_eight"
        android:onClick="onClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nine"
        app:layout_constraintLeft_toLeftOf="@+id/btn_nine"
        app:layout_constraintRight_toRightOf="@+id/btn_nine"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintLeft_toLeftOf="@+id/multiply"
        app:layout_constraintRight_toRightOf="@+id/multiply"
        android:onClick="onClick"/>



</androidx.constraintlayout.widget.ConstraintLayout>